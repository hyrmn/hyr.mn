layout: layout.njk
title: Welcome to my blog
---

{%- for post in collections.posts | reverse -%}
<section class="mt-6">
    <h4 class="text-lg font-bold"><a href="{{ post.url }}">{{ post.data.title }}</a></h4>
    <time value="{{ post.date }}" class="text-gray-600">{{ post.date | postDate }}</time>
    <div>
    {{ post.data.description | safe }}
    </div>
</section>
{%- endfor -%}
